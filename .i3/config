exec xautolock -detectsleep -time 5 -locker 'i3lock -c 000050'

bindsym $mod+Shift+q exec "xterm -e xkill"

# mod+f5 to turn off display
bindsym $mod+F5 exec sleep 0.1 && xset -display :0.0 dpms force off

bindsym --release $mod+Print exec "scrot -s"
bindsym --release Print exec "scrot"
bindsym --release $mod+Shift+Print exec "scrot -u -d 3"

